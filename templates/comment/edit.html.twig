{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire - ActuG{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-6">
                    <h1 class="font-weight-normal mb-4">Modifier le commentaire</h1>
                    <div class="mt-4 ">
                        {{ include('comment/_form.html.twig', {'button_label': 'Modifier le commentaire'}) }}
                    </div>
                    <div class="d-flex mt-4 gap-2">
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') or comment.userId.id == app.user.id %}
                                {{ include('comment/_delete_form.html.twig') }}
                            {% endif %}
                        {% endif %}
                        <a class="btn btn-outline btn-login me-3" href="{{ path('app_article_index') }}">Retour aux articles</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
