{% extends 'base.html.twig' %}

{% block title %}Modification de "{{ app.user.userIdentifier }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
        <h1 class="mb-4 font-weight-normal text-center">Modifier de "{{ app.user.userIdentifier }}"</h1>

        {% for flashMessage in app.flashes('danger') %}
            <div class="alert alert-warning" role="alert">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un email...'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.firstname, {'label': 'Prénom', 'attr': {'class': 'form-control', 'placeholder': 'Saisissez un prénom...'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.lastname, {'label': 'Nom', 'attr': {'class': 'form-control', 'placeholder': 'Saisissez un nom...'}}) }}
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{ form_row(form.submit) }}
                <a href="{{path('app_account')}}" class="btn btn-outline btn-login">Mon compte</a>
            </div>

        {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
