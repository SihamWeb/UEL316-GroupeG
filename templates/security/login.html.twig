{% extends 'base.html.twig' %}

{% block title %}Se connecter - ActuG{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <form method="post" class="needs-validation">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 d-flex justify-content-center">
                            <p class="fs-1 text-center">
                                Tu es déjà connecté(e) en tant que <strong>{{ app.user.userIdentifier|upper }}</strong>
                            </p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('app_logout') }}" class="btn btn-outline btn-login">Se déconnecter</a>
                        </div>
                    {% else %}
                    
                    <h1 class="mb-3 font-weight-normal text-center">Connectez-vous</h1>
                    
                    <div class="mb-3">
                        <label for="inputEmail">Email</label>
                        <input placeholder="Votre email..." type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword">Mot de passe</label>
                        <input placeholder="Votre mot de passe..." type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                    <div class="d-flex justify-content-center mt-4">
                        <button class="btn btn-block btn-signup me-3" type="submit">
                            Se connecter
                        </button>
                        <a href="{{ path('app_register') }}" class="btn btn-outline btn-login">S'inscrire</a>
                    </div>
                    </form>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
