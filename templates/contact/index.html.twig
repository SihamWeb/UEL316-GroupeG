{% extends 'base.html.twig' %}

{% block title %}Contactez-nous !{% endblock %}

{% block body %}

<div class="container">
    <div class="row header">
      <h1>Nous contacter &nbsp;</h1>
      <h3>Remplissez le formulaire ci-dessous pour en savoir plus !</h3>
    </div>
    <div class="row body">
      <form action="#">
        <ul>
          
          <li>
            <p class="left">
              <label for="first_name">Pr√©nom</label>
              <input type="text" name="first_name" placeholder="Jean" />
            </p>
            <p class="pull-right">
              <label for="last_name">Nom</label>
              <input type="text" name="last_name" placeholder="Durand" />      
            </p>
          </li>
          
          <li>
            <p>
              <label for="email">Email<span class="req">*</span></label>
              <input type="email" name="email" placeholder="jean.durand@gmail.com" />
            </p>
          </li>        
          <li><div class="divider"></div></li>
          <li>
            <label for="comments">Message</label>
            <textarea cols="46" rows="3" name="comments"></textarea>
          </li>
          
          <li>
            <input class="btn btn-submit" type="submit" value="Submit" />
            <small>or press <strong>enter</strong></small>
          </li>
          
        </ul>
      </form>  
    </div>
  </div>
{% endblock %}
