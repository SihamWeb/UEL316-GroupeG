{% extends 'base.html.twig' %}

{% block title %}Résultat(s) pour "{{ query }}"{% endblock %}

{% block body %}

    <h1 class="font-weight-normal text-center mb-4">Résultat(s) pour "{{ query }}"</h1>

    <div class="row d-flex justify-content-center">
        {% for article in articles %}
            <div class="card miniature col-4 col-sm-3" >
                <a href="{{ path('app_article_show', {'id': article.id, 'slug': article.slug|default('slug')}) }}" class="text-center text-uppercase text-decoration-none">
                    <img class='miniature' src="/public/assets/images/articles/{{ article.imageName }}">
                    <div class='container'><p class="mt-3">{{article.title}}</p></div></a>
                    <span class="text-center">Publié(e) par {{article.userId.firstname}} {{article.userId.lastname}}</span>
            </div>
		{% else %}
			<tr>
				<td colspan="4">Aucun article correspondant</td>
			</tr>
		{% endfor %}
    </div>
	<div class="d-flex justify-content-center">
        <a href="{{ path('app_article_index') }}" class="btn btn-block btn-signup mt-5 mb-5">Retourner à la liste</a>
    </div>

{% endblock %}